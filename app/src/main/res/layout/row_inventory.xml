<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp"
    android:background="@drawable/rounded_field">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_field"
        android:padding="5dp">

        <ImageView
            android:id="@+id/itemIv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"  />

        <TextView
            android:id="@+id/nameTv"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/itemIv"
            android:text="Name: "
            android:maxLines="1"/>

        <TextView
            android:id="@+id/stockTv"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/itemIv"
            android:text="Stock: " />

        <TextView
            android:id="@+id/descriptionTv"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stockTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Description: "
            android:layout_toRightOf="@id/itemIv"
            android:maxLines="1"/>

        <Button
            android:id="@+id/updateBtn"
            android:layout_below="@id/descriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="104dp"
            android:background="@drawable/rounded_field_button"
            android:backgroundTint="#00ffff"
            android:text="Update"
            android:textSize="15sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/descriptionTv"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Delete"
            android:textSize="15sp"
            android:background="@drawable/rounded_field_button"
            android:backgroundTint="#ff7f7f"
            android:textAllCaps="false"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>