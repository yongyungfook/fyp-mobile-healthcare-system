<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp"
    android:background="@drawable/rounded_field">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_field">

        <TextView
            android:id="@+id/scheduleTimeTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Schedule Time: "
            android:maxLines="1"/>

        <TextView
            android:id="@+id/descriptionTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scheduleTimeTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Description: "
            android:maxLines="1"/>

        <TextView
            android:id="@+id/submitTimeTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Submit Time: " />

        <TextView
            android:id="@+id/nameTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/submitTimeTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Name: " />

        <Button
            android:id="@+id/acceptBtn"
            android:layout_below="@id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="104dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_field_button"
            android:backgroundTint="#90ee90"
            android:text="Accept"
            android:textSize="13sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/rejectBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/nameTv"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Reject"
            android:textSize="13sp"
            android:background="@drawable/rounded_field_button"
            android:backgroundTint="#ff7f7f"
            android:textAllCaps="false"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>