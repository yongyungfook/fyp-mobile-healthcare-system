<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp"
    android:background="@drawable/rounded_field">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_field">

        <TextView
            android:id="@+id/uidTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="UID: "
            android:maxLines="1"/>

        <TextView
            android:id="@+id/scheduleTimeTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/uidTv"
            android:text="Schedule Time: "
            android:maxLines="1"/>

        <TextView
            android:id="@+id/descriptionTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scheduleTimeTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Description: "
            android:maxLines="1"/>

        <TextView
            android:id="@+id/submitTimeTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Submit Time: " />

        <TextView
            android:id="@+id/nameTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/submitTimeTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Name: " />

        <TextView
            android:id="@+id/statusTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Status: " />

        <TextView
            android:id="@+id/reasonTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Reason (if rejected): " />

        <TextView
            android:id="@+id/updateTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reasonTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Handled by: " />

        <TextView
            android:id="@+id/updateTimeTv"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/updateTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Update Time: " />

    </RelativeLayout>

</androidx.cardview.widget.CardView>